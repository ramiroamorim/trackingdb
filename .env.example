NODE_ENV=production
PORT=3000

# URL do frontend permitida pelo CORS
FRONTEND_URL=https://yourdomain.com

# Redis connection URL (local ou serviço gerenciado)
REDIS_URL=redis://localhost:6379

# Facebook Conversions API credentials
# Obtenha em: https://business.facebook.com/events_manager
META_PIXEL_ID=your-pixel-id
META_ACCESS_TOKEN=your-access-token

# Test Event Code (opcional - usado para debug no Facebook)
TEST_EVENT_CODE=TEST12345

# API Key for authentication (OBRIGATÓRIO para produção)
# Gere uma chave segura: openssl rand -hex 32
API_KEY=your-secure-api-key-here

# Log level
LOG_LEVEL=info

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trackingdb
DB_USER=your-db-user
DB_PASSWORD=your-db-password
